.waiting-container
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  background-color #E4DEE0

.waiting-image-container
  position relative
  width 380px
  display block
  margin 0 auto
  margin-top 60px
  margin-bottom 60px
  
  // border 20px solid rgba(white, 35%)

.waiting-image-ring
  position absolute
  top -10px
  left -10px
  animation pulsate 2s ease-out infinite
  opacity 0
  height 400px
  width 400px
  border-radius 200px
  border 10px solid rgba(white, 70%)

.waiting-image-wrapper
  width 380px
  height 380px
  overflow hidden
  border-radius 190px
  
.waiting-image
  width 100%
  
.waiting-text
  text-align center
  font-size 36px
  color #808080
  b
    color black
    font-weight 500

.waiting-accept-button
  display block
  color white
  font-size 24px
  text-align center
  width 346px
  height 100px
  line-height 100px
  margin 0 auto
  text-decoration none
  background-color #36B67D
  margin-top 48px

@keyframes pulsate 
  0%
    transform: scale(1, 1)
    opacity 0
  30%
    opacity 1
  75%
    transform scale(1.1, 1.1)
    opacity 0
  100%
    opacity 0
    
